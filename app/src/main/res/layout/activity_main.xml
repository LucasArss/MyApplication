<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_Euro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="35dp"
        android:text="Euro"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_Dolar"
        app:layout_constraintEnd_toStartOf="@+id/txt_RespEuro"
        app:layout_constraintStart_toEndOf="@+id/txt_Resposta"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edit_Numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginBottom="66dp"
        android:ems="10"
        android:hint="Insira o Valor"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="144dp"
        android:layout_height="0dp"
        android:layout_marginBottom="79dp"
        android:text="Clique Aqui"
        app:layout_constraintBottom_toTopOf="@+id/txt_RespEuro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Numero" />

    <TextView
        android:id="@+id/txt_Resposta"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="17dp"
        android:rotationY="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_Euro"
        app:layout_constraintEnd_toStartOf="@+id/txt_Euro"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="338dp"
        android:background="#673AB7"
        android:contextClickable="false"
        android:text="Conversor de moeda"
        android:textAlignment="center"
        android:textColor="#F8EEEE"
        android:textDirection="inherit"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/txt_Euro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/txt_Dolar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="26dp"
        android:text="Dolar"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_Ienes"
        app:layout_constraintEnd_toStartOf="@+id/txt_RespDolar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Euro" />

    <TextView
        android:id="@+id/txt_Ienes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="186dp"
        android:text="Ienes"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txt_RespIene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Dolar" />

    <TextView
        android:id="@+id/txt_RespEuro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="36dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_RespDolar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_Euro"
        app:layout_constraintTop_toBottomOf="@+id/btn" />

    <TextView
        android:id="@+id/txt_RespDolar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="37dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_RespIene"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_Dolar"
        app:layout_constraintTop_toBottomOf="@+id/txt_RespEuro" />

    <TextView
        android:id="@+id/txt_RespIene"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="186dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_Ienes"
        app:layout_constraintTop_toBottomOf="@+id/txt_RespDolar" />

</androidx.constraintlayout.widget.ConstraintLayout>